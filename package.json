{
  "name": "monostack",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx gitkit setup",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=./libs/*",
    "lint": "turbo run lint",
    "lint-staged": "turbo run lint-staged",
    "test": "turbo run test -- --passWithNoTests",
    "release": "npx gitkit release"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@monostack/gitkit": "workspace:*",
    "turbo": "1.4.6"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "gitkit": {
    "features": {
      "commitlint": true,
      "release": {
        "packages": [
          "apps/*",
          "libs/*"
        ],
        "git-tag": {
          "auto-add": true,
          "auto-push": true,
          "commit-message": "chore(release): {{tag}} :tada:"
        },
        "npm": {
          "auto-publish": true
        },
        "changelog": {
          "enable": true,
          "preset": "conventionalcommits"
        }
      }
    },
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  }
}
